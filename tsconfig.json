{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "paths": {
      "lib/*": [
        "lib/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "store/*": [
        "store/*"
      ],
      "store": [
        "store"
      ],
      "reducers/*": [
        "store/reducers/*"
      ],
      "scss/*": [
        "scss/*"
      ],
      "components/*": [
        "components/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "hooks/": [
        "hooks/*"
      ]
    },
    "allowJs": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,

    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
